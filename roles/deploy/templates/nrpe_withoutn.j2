log_facility=daemon
pid_file=/var/run/nrpe.pid
server_port=5666
server_address={{ inventory_hostname }}
nrpe_user=nagios
nrpe_group=nagios


command[check_ram]=/usr/lib64/nagios/plugins/check_ram
command[check_swap]=/usr/lib64/nagios/plugins/check_swap -w 40% -c 20%
command[check_load]=/usr/lib64/nagios/plugins/check_load -w 15,10,5 -c 30,25,20
command[check_users]= /usr/lib64/nagios/plugins/check_users -w 5 -c 10

{% if (inventory_hostname in groups['ADMIN_UI_VLAN48']) %}
command[check_StreamsAPIGateway]=/usr/lib64/nagios/plugins/check_procs -C node -a /opt/admin/AdminNewUI/server.js -c 1:10
{% endif %}